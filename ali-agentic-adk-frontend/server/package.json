{
  "name": "server",
  "private": true,
  "scripts": {
    "build": "mwtsc --cleanOutDir",
    "dev": "cross-env ets && cross-env NODE_ENV=local mwtsc --watch --run @midwayjs/mock/app.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./src/migrations/migration -d ./src/config/data-source/connection",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/config/data-source/connection",
    "start": "NODE_ENV=production node ./bootstrap.js"
  },
  "dependencies": {
    "@midwayjs/axios": "^3.20.0",
    "@midwayjs/bootstrap": "^3.20.0",
    "@midwayjs/core": "^3.20.0",
    "@midwayjs/logger": "^3.1.0",
    "@midwayjs/typeorm": "^3.20.0",
    "@midwayjs/view-ejs": "^3.20.0",
    "@midwayjs/web": "^3.20.0",
    "alipay-sdk": "^4.13.0",
    "dotenv": "^16.4.5",
    "egg": "^2.0.0",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "wechatpay-node-v3": "^2.2.1"
  },
  "devDependencies": {
    "@midwayjs/egg-ts-helper": "^1.0.1",
    "@midwayjs/mock": "^3.20.0",
    "@types/node": "^20.0.0",
    "cross-env": "^6.0.0",
    "egg-mock": "^3.26.0",
    "mwts": "^1.3.0",
    "mwtsc": "^1.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
